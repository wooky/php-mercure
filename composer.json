{
    "name": "yakov/php-mercure",
    "autoload": {
        "psr-4": {
            "Yakov\\PhpMercure\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yakov\\PhpMercure\\": [
                "tests/common",
                "tests/integration",
                "tests/unit"
            ]
        }
    },
    "require": {
        "ext-sockets": "*",
        "php": ">= 7.4",
        "psr/log": "^1.1",
        "lcobucci/jwt": "^4.3",
        "ramsey/uuid": "^4.2"
    },
    "require-dev": {
        "vimeo/psalm": "^5.6",
        "monolog/monolog": "^2.9",
        "phpunit/phpunit": "^9.6",
        "psalm/plugin-phpunit": "^0.18.4",
        "friendsofphp/php-cs-fixer": "^3.14",
        "squizlabs/php_codesniffer": "^3.7",
        "ext-xdebug": "*",
        "amphp/parallel": "^1.4",
        "amphp/phpunit-util": "^2.0"
    },
    "scripts": {
        "check": [
            "phpcs --standard=PSR12 src tests",
            "php-cs-fixer fix --dry-run --diff --verbose",
            "psalm"
        ],
        "test": [
            "phpunit"
        ],
        "test-integration": [
            "phpunit --testsuite integration"
        ],
        "fix": [
            "phpcbf --standard=PSR12 src tests",
            "php-cs-fixer fix"
        ],
        "coverage": [
            "XDEBUG_MODE=coverage phpunit --coverage-html coverage"
        ],
        "ci": [
            "@check",
            "@test",
            "@test-integration",
            "@coverage"
        ]
    }
}
